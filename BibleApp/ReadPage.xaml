<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BibleApp.ReadPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Reading Mode">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Label x:Name="HeaderLabel"
                   FontSize="24"
                   FontAttributes="Bold" />
            <Label Text="(Verses will appear here once the API is connected.)"
                   TextColor="#666" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
