<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BibleApp.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <!-- App title -->
            <Label Text="BIBLE · GPT"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Search row -->
            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                <Entry x:Name="SearchEntry"
                       Placeholder="Search (e.g., 'John 3:16' or 'love')"
                       ReturnType="Search" />
                <Button Grid.Column="1"
                        Text="Search"
                        Clicked="OnSearchClicked" />
            </Grid>

            <!-- Read sequentially card -->
            <Frame Padding="14" CornerRadius="12" BorderColor="#D9D9D9">
                <VerticalStackLayout Spacing="6">
                    <Label Text="Read sequentially" FontAttributes="Bold" FontSize="18" />
                    <Label Text="Start at Genesis 1 (you can change this later)"
                           FontSize="12" TextColor="#666" />
                    <Button Text="Start reading"
                            x:Name="ReadSequentiallyButton"
                            Clicked="OnReadSequentiallyClicked" />
                </VerticalStackLayout>
            </Frame>

            <!-- Quick tips (optional) -->
            <Label Text="Tips:"
                   FontAttributes="Bold" />
            <Label Text="• Use the tabs below to open Books, Favorites, or Settings."
                   FontSize="12" TextColor="#666"/>
            <Label Text="• The Search button will call the API later."
                   FontSize="12" TextColor="#666"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
