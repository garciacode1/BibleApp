<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BibleApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:BibleApp.Pages">

    <!-- Bottom tabs for your 4 screens -->
    <TabBar>
        <ShellContent Title="Home"     ContentTemplate="{DataTemplate pages:MainPage}" />
        <ShellContent Title="Books"    ContentTemplate="{DataTemplate pages:BooksPage}" />
        <ShellContent Title="Chapters" ContentTemplate="{DataTemplate pages:ChaptersPage}" />
        <ShellContent Title="Favorites" ContentTemplate="{DataTemplate pages:FavoritesPage}" />
        <ShellContent Title="Settings" ContentTemplate="{DataTemplate pages:SettingsPage}" />
        
        
    </TabBar>

</Shell>
