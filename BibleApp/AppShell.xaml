<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BibleApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BibleApp"
    Title="BibleApp">

    <!-- Bottom tabs for your 4 screens -->
    <TabBar>
        <ShellContent Title="Home"     ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent Title="Books"    ContentTemplate="{DataTemplate local:BooksPage}" />
        <ShellContent Title="Favorites" ContentTemplate="{DataTemplate local:FavoritesPage}" />
        <ShellContent Title="Settings" ContentTemplate="{DataTemplate local:SettingsPage}" />
    </TabBar>

</Shell>
